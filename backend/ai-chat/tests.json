{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "POST without message",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with message returns response",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "Hello"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "response": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}